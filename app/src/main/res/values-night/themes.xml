<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacJournal" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="titleTextColor">@color/ActionBarTitleColor</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    Dark Mode    -->
    <!--    Screen background if dark mode on -->
    <style name="SCREEN">
        <item name="android:background">#2A2A2A</item>
    </style>

    <!--    Texts background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <!--    Button background if dark mode on-->
    <style name="BUTTON">
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!--    TicTacToe ImageView if dark mode on -->
    <style name="IMAGEVIEW" >
        <item name="android:background">@drawable/white_box</item>
    </style>

    <!--    Welcome End if dark mode on -->
    <style name="WELCOME" >
        <item name="android:background">@drawable/textstyle</item>
        <item name="android:textColor">#000</item>
    </style>

    <!--    Welcome End if light mode on -->
    <style name="CALENDAR" >
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="PLUS">
        <item name="backgroundTint">#5EADC9</item>
        <item name="tint">#000</item>
    </style>

    <style name="HOME">
        <item name="backgroundTint">#2C2C2C</item>
    </style>

    <style name="ICON">
        <item name="itemIconTint">@color/botom_item_background</item>
        <item name="itemTextColor">@color/botom_item_background</item>
    </style>

    <style name="SETTINGS">
        <item name="android:textColor">#FFF</item>
        <item name="android:tint">#FFF</item>
    </style>
</resources>