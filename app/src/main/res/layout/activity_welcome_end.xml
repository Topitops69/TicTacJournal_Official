<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2A2A"
    tools:context=".Welcome_end">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="32dp"
        android:text="Welcome to your Journal"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGot"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/roundstyle"
        android:text="Got it!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">


        <TextView
            android:id="@+id/Save"
            android:layout_width="279dp"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            android:background="@drawable/textstyle"
            android:text="Save moments in your life"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/icon1"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon"

            android:text="" />

        <ImageView
            android:id="@+id/icnHeart"
            android:layout_width="42dp"

            android:layout_height="42dp"

            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/book_heart"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/def1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Watch how you change and grow"
            android:textAlignment="center"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon"

            android:text="" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="279dp"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            android:background="@drawable/textstyle"
            android:lineSpacingExtra="8sp"
            android:text="Keep your thoughts and ideas private"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icnLock"
            android:layout_width="40dp"

            android:layout_height="40dp"

            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/secure"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/def2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Your journal is for your eyes only"
            android:textAlignment="center"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon"

            android:text="" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="279dp"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            android:background="@drawable/textstyle"
            android:text="Reflect your emotions"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icnGraph"
            android:layout_width="42dp"

            android:layout_height="42dp"

            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/graph"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/def3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mark your moods and detect patterns"
            android:textAlignment="center"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="134dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon"

            android:text="" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="279dp"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            android:background="@drawable/textstyle"
            android:text="Play Tic Tac Toe"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/icnTic"
            android:layout_width="42dp"

            android:layout_height="42dp"

            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/tictac"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/def4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:text="Earn points, unlock themes, and disable ads"
            android:textAlignment="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>